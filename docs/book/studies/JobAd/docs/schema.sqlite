CREATE TABLE position (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    ident varchar,
    created datetime,
    modified datetime,
    job INTEGER,
    n_openings INTEGER,
    location varchar,
    closes date,
    boss varchar,
    pay varchar
);

