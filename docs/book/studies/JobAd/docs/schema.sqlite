    id INTEGER PRIMARY KEY AUTOINCREMENT,
    job INTEGER,
    skill INTEGER
);
CREATE TABLE auth_users (
    id INTEGER NOT NULL DEFAULT NEXTVAL( 'auth_users_seq'::text ),
    user_id INTEGER PRIMARY KEY DEFAULT CURRVAL( 'auth_users_seq'::text ),
    active boolean,
    user_name varchar,
    passwd varchar,
    crypt varchar,
    first_name varchar,
    last_name varchar,
    email varchar
);

