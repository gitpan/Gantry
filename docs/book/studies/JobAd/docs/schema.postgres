CREATE TABLE position (
    id SERIAL PRIMARY KEY,
    ident varchar,
    created TIMESTAMP WITH TIME ZONE,
    modified TIMESTAMP WITH TIME ZONE,
    job int4,
    n_openings int4,
    location varchar,
    closes date,
    boss varchar,
    pay varchar
);

CREATE TABLE job_skill (
    id SERIAL PRIMARY KEY,
    job int4,
    skill int4
);
