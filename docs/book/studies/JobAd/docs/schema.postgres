CREATE TABLE job (
    id SERIAL PRIMARY KEY,
    title varchar,
    description varchar,
    created TIMESTAMP WITH TIME ZONE,
    modified TIMESTAMP WITH TIME ZONE,
    travel_percent varchar,
    on_site varchar,
    time_percent varchar
);

