CREATE TABLE position (
    id MEDIUMINT PRIMARY KEY AUTO_INCREMENT,
    ident VARCHAR(100),
    created datetime,
    modified datetime,
    job MEDIUMINT,
    n_openings MEDIUMINT,
    location VARCHAR(100),
    closes date,
    boss VARCHAR(100),
    pay VARCHAR(100)
);

CREATE TABLE job_skill (
    id MEDIUMINT PRIMARY KEY AUTO_INCREMENT,
    job MEDIUMINT,
    skill MEDIUMINT
);
CREATE TABLE auth_users (
    id MEDIUMINT NOT NULL DEFAULT NEXTVAL( 'auth_users_seq'::text ),
    user_id MEDIUMINT PRIMARY KEY DEFAULT CURRVAL( 'auth_users_seq'::text ),
    active boolean,
    user_name VARCHAR(100),
    passwd VARCHAR(100),
    crypt VARCHAR(100),
    first_name VARCHAR(100),
    last_name VARCHAR(100),
    email VARCHAR(100)
);

