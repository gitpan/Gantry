CREATE TABLE job (
    id MEDIUMINT PRIMARY KEY AUTO_INCREMENT,
    title VARCHAR(100),
    description VARCHAR(100),
    created datetime,
    modified datetime,
    travel_percent VARCHAR(100),
    on_site VARCHAR(100),
    time_percent VARCHAR(100)
);

